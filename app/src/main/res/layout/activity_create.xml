<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tao.rxtest.MainActivity">
    

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >
       <Button
           android:id="@+id/bt_create"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" 
           android:padding="10dp"
           android:text="create"
           />  
       <Button
           android:id="@+id/bt_just"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" 
           android:padding="10dp"
           android:text="just"
           /> 
       
       <Button
           android:id="@+id/bt_assembly_operate"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" 
           android:padding="10dp"
           android:text="fromarray"
           />
       <Button
           android:id="@+id/bt_defer"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" 
           android:padding="10dp"
           android:text="defer"
           />
        <Button
           android:id="@+id/bt_timer"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" 
           android:padding="10dp"
           android:text="timer"
           />   <Button
           android:id="@+id/bt_inverval"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" 
           android:padding="10dp"
           android:text="inverval"
           />
           <Button
           android:id="@+id/bt_inverval_range"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" 
           android:padding="10dp"
           android:text="bt_inverval_range"
           />
           <Button
           android:id="@+id/bt_range"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" 
           android:padding="10dp"
           android:text="bt_range"
           />
       
       </LinearLayout> 
   </ScrollView>

</android.support.constraint.ConstraintLayout>
